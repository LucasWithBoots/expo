{
  "platforms": [ "apple", "android", "cli" ],
  "apple": {
    "appDelegateSubscribers": [ "BackgroundTaskAppDelegateSubscriber" ],
    "modules": [ "BackgroundTaskModule" ]
  },
  "android": {
    "modules": [ "expo.modules.backgroundtask.BackgroundTaskModule" ]
  },
  "cli": {
    "description": "Tool for managing background tasks in Expo apps",
    "commands": [
      { "cmd": "list", "caption": "List registered background tasks" },
      { "cmd": "test", "caption": "Trigger background tasks for testing in connected apps" }
    ],
    "mcpEnabled": true,
    "main": "cli/build/index.js"
  }
}
