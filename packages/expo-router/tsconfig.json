{
  "extends": "expo-module-scripts/tsconfig.base",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node10",
    "noEmit": true,
    "resolveJsonModule": true,
    "types": [
      "jest",
      "jest-require",
      "node"
    ]
  },
  "include": [
    "./src",
    "./types/expect.d.ts",
    "../@expo/cli/ts-declarations",
    "../expo/src/ts-declarations"
  ],
  "exclude": [
    "**/__tests__/",
    "**/__rsc_tests__/"
  ]
}
